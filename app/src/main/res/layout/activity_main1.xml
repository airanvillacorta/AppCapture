<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <org.opencv.android.JavaCameraView
        android:id="@+id/main_surface"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/bCapture"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/tRvecs"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="@string/rvecs"
        android:textAlignment="viewStart"
        app:layout_constraintBottom_toTopOf="@+id/tTvecs"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/bCapture"
        app:layout_constraintTop_toBottomOf="@+id/main_surface" />

    <Button
        android:id="@+id/bCapture"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="26dp"
        android:text="@string/capture"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tTvecs"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="@string/tvecs"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/bCapture"
        app:layout_constraintTop_toBottomOf="@+id/tRvecs" />

    <TextView
        android:id="@+id/tId"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="@string/id"
        android:textAlignment="center"
        android:textSize="11sp"
        app:layout_constraintBottom_toBottomOf="@+id/tTvecs"
        app:layout_constraintEnd_toStartOf="@+id/tTvecs"
        app:layout_constraintStart_toStartOf="@+id/main_surface"
        app:layout_constraintTop_toBottomOf="@+id/bCapture"
        app:layout_constraintVertical_bias="0.269" />


</androidx.constraintlayout.widget.ConstraintLayout>